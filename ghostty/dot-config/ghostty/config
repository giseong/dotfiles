# Terminal
term = "xterm-256color"

# Appearance: Use a dynamic theme that follows your system’s light/dark mode
#theme = light:catppuccin-latte, dark:catppuccin-mocha
theme = light:Catppuccin Latte, dark:Catppuccin Mocha

# Fonts
font-family = "JetBrainsMono Nerd Font"
font-size = 13
font-thicken = true

# Window
window-width = 80
window-height = 26

# Cursor
shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false
cursor-click-to-move = true

# macOS-specific tweaks: Enjoy a native feel
macos-titlebar-style = hidden
macos-option-as-alt = true

# --- OS별 조건부 설정 ---
# macOS일 때만 폰트 크기를 16으로 변경합니다.
# ghostty는 플랫폼별 전용 설정 파일을 로드하거나 아래와 같은 문법을 지원합니다.
font-size = 16 [macos]

# Shell integration: Helps with dynamic title updates and working directory sharing
shell-integration = detect

