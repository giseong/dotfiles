root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Web / Frontend / Scripting (2-space conventions)
[*.{js,jsx,ts,tsx,json,yaml,yml,html,css,scss,lua,vue,svelte,graphql}]
indent_size = 2

[*.{sh,bash,zsh}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Tab-based languages
[*.{c,cpp,h,hpp}]
indent_style = tab
tab_width = 4

[*.go]
indent_style = tab
tab_width = 4

[Makefile]
indent_style = tab
tab_width = 4

[*.gitconfig]
indent_style = tab
tab_width = 4

